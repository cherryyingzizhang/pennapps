<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FF9800"
              android:padding="16dp">

        <TextView
        android:id="@+id/welcome_text"
        android:text="WELCOME TO"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="50sp"
        android:layout_marginTop="50dp"/>


        <TextView
        android:id="@+id/welcome_text"
        android:text="FOOTSIES"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="80sp"/>


        <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/welcome_sub_text"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:gravity="left"
        android:text="You gait posture companion app."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/welcome_sub_text"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:text="For your continence, please log into Google Fit so we can store your data in the cloud."
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/login_fit"
        android:text="Log In"
        android:background="#FFFFFF"/>

</LinearLayout>